<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="comp3350.ezcinema.presentation.HomeActivity">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:scaleType="centerCrop"
        android:src="@drawable/background" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="21dp"
        android:text="EZ CINEMA"
        android:textColor="#FFFFFF"
        android:textSize="50sp" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <Button
                android:id="@+id/buttonMovie"
                android:onClick="buttonMovieOnClick"
                android:layout_width="match_parent"
                android:layout_height="225sp"
                android:text="Movies"
                android:textSize="40sp"
                android:textColor="#000000"
                android:background="@color/whiteTransparent"
                android:layout_marginStart="30dp"
                android:layout_marginEnd="30dp"
                android:drawableLeft="@drawable/reel"
                android:drawablePadding="5dp"
                android:paddingStart="10dp"
                />

            <Button
                android:id="@+id/buttonTheater"
                android:onClick="buttonTheaterOnClick"
                android:layout_width="match_parent"
                android:layout_height="225sp"
                android:text="Theaters"
                android:textSize="40sp"
                android:textColor="#000000"
                android:background="@color/whiteTransparent"
                android:layout_marginStart="30dp"
                android:layout_marginEnd="30dp"
                android:drawableLeft="@drawable/popcorn"
                android:drawablePadding="5dp"
                android:paddingStart="10dp"
                android:layout_marginTop="10dp"
                />

            <Button
                android:id="@+id/ticketButton"
                android:layout_width="match_parent"
                android:layout_height="225sp"
                android:text="My Tickets"
                android:textSize="40sp"
                android:textColor="#000000"
                android:background="@color/whiteTransparent"
                android:layout_marginStart="30dp"
                android:layout_marginEnd="30dp"
                android:onClick="buttonTicketsOnClick"
                android:drawableLeft="@drawable/ticket"
                android:drawablePadding="5dp"
                android:paddingStart="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"

                />

        </LinearLayout>

    </ScrollView>

</RelativeLayout>
