<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:focusable="false"
    android:focusableInTouchMode="true"
    android:paddingLeft="16dp"
    android:paddingRight="16dp"
    android:paddingTop="16dp"
    android:paddingBottom="16dp"
    android:background="@drawable/background"
    tools:context="comp3350.ezcinema.presentation.CheckoutActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@color/whiteTransparent">

        <TextView
            android:id="@+id/textView2"
            android:layout_width="match_parent"
            android:layout_height="45sp"
            android:text="Checkout"
            android:textColor="@android:color/black"
            android:textSize="40sp"
            android:typeface="normal"
            tools:layout_editor_absoluteX="16dp"
            tools:layout_editor_absoluteY="8dp" />

        <View
            android:id="@+id/separator4"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="8dp"
            android:background="#000000"
            app:layout_constraintTop_toBottomOf="@+id/textView2"
            tools:layout_editor_absoluteX="0dp" />

        <TextView
            android:id="@+id/textViewTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="TextView"
            android:textColor="@android:color/black"
            android:textSize="25sp"
            android:typeface="normal" />

        <TextView
            android:id="@+id/textViewSubtotal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Subtotal:"
            android:textColor="@android:color/black"
            android:textSize="25sp"
            android:typeface="normal" />

        <TextView
            android:id="@+id/textViewTotal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Total:"
            android:textColor="@android:color/black"
            android:textSize="25sp"
            android:typeface="normal" />

        <View
            android:id="@+id/separator3"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="10dp"
            android:background="#000000" />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Payment Method:"
            android:textColor="@android:color/black"
            android:textSize="25sp"
            android:typeface="normal" />

        <RadioGroup
            android:layout_width="match_parent"
            android:layout_height="109dp">

            <RadioButton
                android:id="@+id/radio_credit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:onClick="onRadioButtonClicked"
                android:text="Credit Card"
                android:textColor="@android:color/black"
                android:textSize="22sp"
                android:typeface="normal" />

            <RadioButton
                android:id="@+id/radio_paypal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:onClick="onRadioButtonClicked"
                android:text="PayPal"
                android:textColor="@android:color/black"
                android:textSize="22sp"
                android:typeface="normal" />

            <RadioButton
                android:id="@+id/radio_scene"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:onClick="onRadioButtonClicked"
                android:text="Scene Points"
                android:textColor="@android:color/black"
                android:textSize="22sp"
                android:typeface="normal" />

        </RadioGroup>

        <RelativeLayout
            android:id="@+id/fragment_container"
            android:layout_width="match_parent"
            android:layout_height="250sp"
            android:layout_marginBottom="8dp"
            android:layout_weight="1"
            tools:layout_editor_absoluteX="0dp">

        </RelativeLayout>

        <Button
            android:id="@+id/buttonPurchase"
            android:layout_width="match_parent"
            android:layout_height="225sp"
            android:layout_weight="1"
            android:background="@color/whiteTransparent"
            android:text="Purchase"
            android:textAlignment="center"
            android:textSize="40sp"
            tools:layout_editor_absoluteX="3dp"
            tools:layout_editor_absoluteY="632dp" />

    </LinearLayout>

</android.support.constraint.ConstraintLayout>